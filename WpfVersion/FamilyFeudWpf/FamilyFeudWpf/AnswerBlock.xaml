<UserControl x:Class="WpfApp1.AnswerBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" MouseDown="UserControl_MouseDown">
    <Grid>
        <Border x:Name="border" Background="Blue" CornerRadius="5" Padding="5" Margin="5">
            <TextBlock x:Name="textBlock" Text="Answer" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>